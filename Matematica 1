//MATEMÁTICA
void main() {
  
//Atividade Um
{
  var raio = 100.64;
  var area = 3.1415 * (raio * raio);
  print ('ATIVIDADE UM');
  print ('A área do círculo é ${area.toStringAsFixed(4)}.');
}
  
  
//Atividade Dois
{  
  var chapa = 6;
  var horaTrabalhada = 145;
  var salarioHora = 15.55;
  var salario = salarioHora * horaTrabalhada;
  print ('\n\nATIVIDADE DOIS');
  print ('Chapa = $chapa \nSalário = R\$${salario.toStringAsFixed(2)}');
}


//Atividade Três
{
  var nome = 'João';
  var salarioFixo = 500.00;
  var vendas = 1230.30;
  var comissao = vendas * 0.15 ;
  var salarioFinal = salarioFixo + comissao;
  print ('\n\nATIVIDADE TRÊS');
  print ('$nome receberá R\$${salarioFinal.toStringAsFixed(2)} esse mês.');  
}


//Atividade Quatro
{  
  var calor = 50;
  var trabalho = 12;
  var energiaInicial = 100;
  var energiaFinal = (energiaInicial - trabalho) + calor;
  print ('\n\nATIVIDADE QUATRO');
  print ('A energia final é de $energiaFinal\J.');
}
  
  
//Atividade Cinco
{
  var trabalho = 12;
  var recebe = 23;
  var conversao = (trabalho / recebe) * 100;
  print ('\n\nATIVIDADE CINCO');
  print ('A capacidade percentual de conversão do motor é de ${conversao.toStringAsFixed(2)}%.');
}
}
